{
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true,
            "modules": true,
            "experimentalObjectRestSpread": true
        }
    },
    "plugins": [
        "react"
    ],
    "extends": ["eslint:recommended", "plugin:react/recommended", "react-app"],
    "rules": {
        "indent": ["warn", 2],
        "react/jsx-indent": ["warn", 2],
        "comma-dangle": 0,
        "react/jsx-uses-vars": 1,
        "react/display-name": 1,
        "no-unused-vars": "warn",
        "no-console": 1,
        "no-unexpected-multiline": "warn"
    },
    "overrides": [
        {
          "excludedFiles": "**/bridge*.js"
        }
    ],
    "settings": {
        "react": {
            "pragma": "React",
            "version": "15.6.1"
        }
    }
}
